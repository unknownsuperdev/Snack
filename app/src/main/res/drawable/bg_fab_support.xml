<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>

            <item>
                <shape android:shape="oval">

                    <gradient android:angle="135" android:endColor="#8462CB" android:startColor="#CC63C1" />
                </shape>

            </item>


            <item android:bottom="@dimen/padding_small" android:drawable="@drawable/ic_support" android:end="@dimen/padding_small" android:gravity="center" android:left="@dimen/padding_small" android:top="@dimen/padding_small" />

            <item>
                <shape android:shape="oval">

                    <solid android:color="#33000000" />

                </shape>

            </item>

        </layer-list>
    </item>

    <item>
        <layer-list>

            <item>
                <shape android:shape="oval">

                    <gradient android:angle="135" android:endColor="#8462CB" android:startColor="#CC63C1" />
                </shape>

            </item>

            <item android:bottom="@dimen/padding_small" android:drawable="@drawable/ic_support" android:end="@dimen/padding_small" android:gravity="center" android:left="@dimen/padding_small" android:top="@dimen/padding_small" />

        </layer-list>
    </item>
</selector>