<resources>

    <style name="Theme.Snack" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/primary</item>
        <item name="colorAccent">@color/primary</item>

        <item name="textInputStyle">@style/TextInputLayout</item>
    </style>

    <style name="Theme.Fullscreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/primary</item>
        <item name="colorAccent">@color/primary</item>

        <item name="textInputStyle">@style/TextInputLayout</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="Text.Title2">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="Text.Title2.Medium">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textColor">@color/gray_medium</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="Text.Light">
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="Text.Medium.Light">
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="Text.Small">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="Button.Primary">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Button.PrivacyConfirmation">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_privacy_confirmation_button</item>
    </style>

    <style name="Button.Normal">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_normal</item>
    </style>


    <style name="Button.Primary.Outline">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_primary_outline</item>
    </style>

    <style name="Button.Medium">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="Button.Settings">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="Button.Settings.Help">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/padding_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/padding_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/padding_small</item>
        <item name="boxCornerRadiusTopStart">@dimen/padding_small</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="hintEnabled">false</item>
        <item name="android:lines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="errorIconTint">@color/red</item>
        <item name="endIconTint">@color/green</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>